@model List<CarManagement.Models.ElectricCar>
@{
    ViewData["Title"] = "Danh sách xe điện";
}
<h2 class="text-dark mb-4"><span class="text-danger">Danh sách</span> xe điện</h2>

<div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
    @foreach (var car in Model)
    {
        <div class="col">
            <div class="card shadow-sm h-100">
                <img src="@car.ImageUrl" class="card-img-top" style="height: 200px; object-fit: cover;" alt="@car.Model" />
                <div class="card-body">
                    <h5 class="card-title text-primary fw-bold">@car.Model</h5>
                    <p class="mb-1"><strong>Hãng:</strong> @car.BranchId</p>
                    <p class="mb-1"><i class="bi bi-battery-half"></i> Pin: <strong>@car.Battery</strong> kWh</p>
                    <p class="mb-1"><i class="bi bi-speedometer"></i> Tầm hoạt động: <strong>@car.RangeKm</strong> km</p>
                    <p class="text-dark"><strong>Giá:</strong> <span class="text-success">@car.Price.ToString("N0")</span> USD</p>
                </div>
                <div class="card-footer bg-white border-top-0 d-flex justify-content-between">
                    <a href="/ElectricCars/Edit/@car.Id" class="btn btn-warning btn-sm">Sửa</a>
                    <a href="#" class="btn btn-info btn-sm">Chi tiết</a>
                    <a href="/ElectricCars/Delete/@car.Id" class="btn btn-danger btn-sm">Xoá</a>
                </div>
            </div>
        </div>
    }
</div>
