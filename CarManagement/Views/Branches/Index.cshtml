@model List<CarManagement.Models.Branch>
@{
    ViewData["Title"] = "Danh sách hãng xe";
}
<h2>@ViewData["Title"]</h2>

<a class="btn btn-primary mb-3" href="/Branches/Create">Thêm hãng xe</a>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Tên hãng</th>
            <th>Quốc gia</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Country</td>
                <td>
                    <a class="btn btn-sm btn-warning" href="/Branches/Edit/@item.Id">Sửa</a>
                    <a class="btn btn-sm btn-danger" href="/Branches/Delete/@item.Id">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
