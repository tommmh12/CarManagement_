<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CarManagement</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/CarManagement.styles.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light shadow-sm">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">CarManagement</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Cars" asp-action="Index">Tổng hợp xe</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Cars" asp-action="Create">Thêm xe mới</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="GasCars" asp-action="Index">Xe xăng</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="ElectricCars" asp-action="Index">Xe điện</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Branch" asp-action="Index">Hãng xe</a>
                        </li>
                    </ul>
                    <form asp-controller="Cars" asp-action="Index" method="get" class="d-flex">
                        <input class="form-control me-2" name="SearchModel" type="search" placeholder="Tìm xe..." />
                        <select class="form-select me-2" name="CarType">
                            <option value="">Tất cả</option>
                            <option value="Gas">Xe xăng</option>
                            <option value="Electric">Xe điện</option>
                        </select>
                        <button class="btn btn-outline-primary" type="submit">🔍</button>
                    </form>
                </div>
            </div>
        </nav>
    </header>

    <div class="container mt-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted mt-5">
        <div class="container text-center py-3">
            &copy; 2025 - CarManagement - <a asp-controller="Home" asp-action="Privacy">Chính sách</a>
        </div>
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
